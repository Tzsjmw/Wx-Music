/* components/song-item-v1/index.wxss */
.content {
  display: flex;
  padding: 16rpx 0;
  /* box-shadow: 0rpx 0rpx 10rpx 1rpx rgba(0, 0, 0, 0.1); */
  border-bottom: 1rpx solid #f5f1f1;
}
.content .image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
}
.content .info {
  flex: 1;
  margin-left: 20rpx;
  padding-top: 10rpx;
}

.content .info .songName {
  display: block;
  font-size: 32rpx;
  color: #555;
}

.content .info .singer {
  display: block;
  padding-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.content .icon {
  width: 50rpx;
  height: 50rpx;
  margin-top: 40rpx;
}
