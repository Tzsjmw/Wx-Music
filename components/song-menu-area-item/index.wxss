.song-playlist-area-item {
  width: 200rpx;
  /* box-shadow: 0px 0px 0px 2rpx rgba(0, 0, 0, 0.1); */
  border-radius: 10rpx;
  padding: 5rpx;
  box-shadow: 1rpx 1rpx 10rpx rgba(0, 0, 0, 0.1);
}

.coverImg {
  position: relative;
  width: 200rpx;
  border-radius: 10rpx;
}

.coverImg .playCount {
  position: absolute;
  right: 5rpx;
  bottom: 5rpx;
  /* width: 90rpx; */
  height: 30rpx;
  font-size: 20rpx;
  color: #fff;
  padding: 5rpx;
  border-radius: 10rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
}

