/* components/playlist-popup/index.wxss */
.playlist {
  color: #000;
  padding: 0 20rpx;
}
.playlist .header {
  position: sticky;
  top: 0;
  left: 0;
  padding: 20rpx 0;
  z-index: 1;
  background-color: #fff;
  box-shadow: 0rpx 2rpx 1rpx rgba(0, 0, 0, 0.1);
}
.playlist .header .first {
  display: block;
  font-size: 38rpx;
}
.playlist .header .first .songsCount {
  font-size: 24rpx;
  color: #999;
}
.playlist .header .playMode {
  font-size: 28rpx;
}
.playlist .songs {
  margin-top: 20rpx;
}
.playlist .songs .item {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}
.playlist .songs .item .delete {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 68rpx;
  height: 68rpx;
  font-size: 38rpx;
  color: #999;
  text-align: center;
  line-height: 68rpx;
  border-radius: 50%;
  margin-top: 6rpx;
  /* line-height: 37.14rpx; */
}
.playlist .songs .activeItem {
  color: #c7302f;
}
/* .playlist .songs .activeItem  {
  width: 50rpx;
  vertical-align: -10%;
} */
.playlist .songs .activeItem image {
  width: 50rpx;
  vertical-align: -10%;
}
