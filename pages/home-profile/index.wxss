/* pages/home-profile/index.wxss */
page {
  padding: 0 0 88rpx;
}
.home-profile {
  width: 100%;
  padding: 100rpx 30rpx 88rpx;
  box-sizing: border-box;
}
.home-profile .header {
  position: relative;
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.home-profile .header .avatar {
  position: absolute;
  top: -60rpx;
  left: 50%;
  transform: translate(-50%);
  overflow: hidden;
  width: 150rpx;
  height: 150rpx;
  background-color: rgb(211, 210, 210);
  border-radius: 50%;
}
.home-profile .header .avatar .avatarImg {
  position: absolute;
  top: 0rpx;
  left: 0;
  width: 100%;
}
.home-profile .header .userName {
  position: absolute;
  top: 120rpx;
  left: 50%;
  transform: translate(-50%);
}
.home-profile .header .userName .loginBtn {
  width: 200rpx;
  height: 50rpx;
  text-align: center;
  color: #fff;
  background-color: #2aca83;
  border-radius: 15rpx;
}
/* 图标区域 */
.home-profile .another {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  width: 100%;
  height: 500rpx;
  background-color: #fff;
  margin-top: 50rpx;
  padding: 30rpx 0;
}
.home-profile .another .item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  height: 150rpx;
  font-size: 18rpx;
  text-align: center;
}
.home-profile .another .item .icon {
  width: 40%;
}
.home-profile .desc {
  text-align: center;
  font-size: 16rpx;
}
.desc {
  margin-top: 15px;
}


.home-profile .announce {
  display: flex;
  flex-direction: column;
  position: absolute;
  font-size: 20rpx;
  left: 0;
  bottom: 158rpx;
  width: 100%;
  text-align: center;
}
