/* pages/detail-search/index.wxss */
page {
  padding: 0 20rpx;
  padding-top:30px ;
}

.vsearch{
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  z-index: 100;
}
.van-search {
  width: 100% !important;
  padding: 0 !important;
}
.van-search__content {
  background-color: #fff !important;
}

/* 2.搜索推荐 */
.searchSuggest {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.searchSuggest .firstLine {
  color: #2aca83;
  font-size: 32rpx;
  font-weight: 700;
  background-color: #fafafa !important;
}
.searchSuggest .suggestItem {
  display: flex;
  height: 68rpx;
  font-size: 30rpx;
  line-height: 65rpx;
  margin-top: 10rpx;
}

/* 3.热门搜索 */
.hotWords {
  overflow: hidden;
  margin-top: 30rpx;
}

.hotWords .title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
}

.hotWords .item {
  float: left;
  height: 50rpx;
  line-height: 50rpx;
  padding: 5rpx 10rpx;
  margin-left: 10rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.03);
  font-size: 28rpx;
}

