page {
  padding: 0 0 88rpx;
}
.detail-playlist {
  width: 100%;
}
/* 1.头部 */
.detail-playlist .header {
  position: relative;
  width: 100%;
  height: 300rpx;
  padding-left: 20rpx;
  padding-top: 30rpx;
}

